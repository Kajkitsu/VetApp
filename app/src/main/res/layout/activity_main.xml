<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10px"
        android:background="?android:attr/statusBarColor"
        android:text="Wizyta u weterynarza"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:ems="10"
        android:hint="Imie i nazwisko własciciela"
        android:inputType="text" />

    <TextView
        android:id="@+id/textViewAnimalType"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10px"
        android:text="Gatunek" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonDog"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10px"
            android:text="Pies" />

        <RadioButton
            android:id="@+id/radioButtonCat"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10px"
            android:checked="true"
            android:text="Kot" />

        <RadioButton
            android:id="@+id/radioButtonGuineaPig"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10px"
            android:text="Świnka morska" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewAgeSuffix"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:text="Ile ma lat?" />

        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:layout_weight="1"
            android:text="0" />

        <SeekBar
            android:id="@+id/seekBarAge"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:max="20"
            android:progress="0" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextPurpose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:ems="10"
        android:hint="Cel wizyty"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:ems="10"
        android:inputType="time"
        android:text="16:00" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:text="OK" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:text="" />



</LinearLayout>